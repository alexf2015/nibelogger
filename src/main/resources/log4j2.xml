<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{dd.MM.yyyy HH:mm:ss} %-5p [%c{3}]: %m%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="de.afriese.iot" level="WARN"/>
        <Logger name="de.afriese.iot.service" level="INFO"/>
        <Logger name="de.afriese.iot.solaredge" level="DEBUG"/>
        <Root level="WARN">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>